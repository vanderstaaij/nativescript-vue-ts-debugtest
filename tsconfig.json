{
    "compilerOptions": {
        "module": "es2015",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "lib": [
            "es6",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "app/*"
            ],
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ]
        },
        // "sourceMap" : true       // This is not necessary here for proper sourcemap generation
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "node_modules",
        "platforms"
    ]
}
